@model NoteLibrary.ViewModels.HomepagePaginationViewModel<NoteLibrary.Models.Entities.File>
@{
    ViewData["Title"] = "Index";
}
<div class="jumbotron" style="background-color:aqua; height: auto;
  background-color: #FFC300;
  background-image: radial-gradient(#FFC300, #181818); color:#181818;">
    <div class="container">
        <h1 class="display-4 text-center">NooteLib</h1>
        <p class="lead text-center">Bu uygulama sayesinde sizlere daha kolay ve pratik bir şekilde not sağlamayı hedefliyoruz.</p>
        <hr class="my-4">
        <p class=" text-center">Biz Kimiz ? Bizim hakkımızda daha fazla bilgi edinebilirsiniz.</p>
        <p class=" text-center">
            <a class="btn-lg " style="background-color:#181818; color:#FFC300" href="#" role="button">Daha Fazla</a>
        </p>

    </div>
</div>
<div class="container" style="margin-top:10px; margin-bottom:10px; ">
    <form asp-controller="Home" asp-action="Index" method="get">
        <div class="row">
            <div class="input-group">

                <div class="col-md-10">
                    <input type="text" class="form-control" name="SearchString" placeholder="Aramak istediğiniz dersin adını giriniz" aria-label="Text input with segmented dropdown button">
                </div>
                <div class="col-md-2">
                    <input type="submit" class="col-md-12 btn btn-default" style="background-color:#181818; color:#FFC300" value="Ara" />
                </div>


            </div>
        </div>
    </form>
</div>

<div class="container">

    <div class="row">


        @foreach (var item in Model)
        {
            <!-- Blog Entries Column -->
            <div class="col-md-4">
                <!-- Blog Post -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.CourseName)</h4>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <a asp-action="Details" class="btn btn-default" style="background-color:#FFC300; color:#181818;" asp-route-id="@item.Id">Ders Notunu İncele</a>
                    </div>
                </div>
            </div>

        }



    </div>
</div>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-page="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-page="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>