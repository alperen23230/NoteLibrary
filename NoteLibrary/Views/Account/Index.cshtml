@model IEnumerable<NoteLibrary.Models.Entities.File>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}


<div class="container mt-3 mb-3" >
    <form asp-controller="Account" asp-action="Index" method="get">
        <div class="row">
            <div class="input-group">
                <div class="col-md-10">
                    <input type="text" class="form-control" name="SearchString" placeholder="Aramak istediğiniz dersin adını giriniz" aria-label="Text input with segmented dropdown button">
                </div>
                <div class="col-md-2">
                    <input type="submit" class="col-md-12 btn btn-primary" value="Ara" />
                </div>
            </div>
        </div>
    </form>
</div>
<div class="container">
    <div class="row">
        <img src="~/images/Dersler.jpg" style="width:100%; height:300px;" class="d-block " alt="...">
    </div>
</div>
<div class="container pt-2">
    <div class="row">
        @foreach (var item in Model)
        {
            <!-- Blog Entries Column -->
            <div class="col-md-4">
                <!-- Blog Post -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.CourseName)</h4>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Ders Notunu İncele</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>